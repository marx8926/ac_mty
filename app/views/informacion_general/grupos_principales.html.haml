/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Grupos Principales
      %small
        %li Home
        %li /
        %li Información General
        %li /
        %li Grupos Principales
  / Page title end
  / Row start

  / Row start
  .row
    #accordion.col-md-12
      .widget
        .widget-header
          %a#agregar.btn.btn-primary.btn-block{"data-icon" => ""}
            Crear Grupos Principales
        #regasistencia{style: "display:none"}
          .widget-body
            = form_tag(asistencia_guardar_path , {:method=>'post',:class=>'form-horizontal', :id => "form_asistencia", :name=> "form_asistencia"}) do
              %br              
              .form-group
                %label.col-sm-2.control-label{for: "codigo"} Código
                .col-sm-10
                  .row
                    .col-sm-5
                      %input#codigo.form-control{type: "text", name:"codigo",class:"validate[required]"}
                    %label.col-lg-2.col-sm-2.control-label Tipo Grupo
                    .col-lg-4.col-sm-4
                      %select#tipo_grupo.form-control{name: "tipo_grupo"}
                        %option{value: "0"} Mujeres Adultas
                        %option{value: "1"} Hombres Adultos
                        %option{value: "2"} Mujeres Jóvenes
                        %option{value: "3"} Hombres Jóvenes
                        %option{value: "4"} Niños
                        %option{value: "5"} Mixto
              .form-group
                %label.col-sm-2.control-label{for: "responsable"} Responsable
                %input#persona_hidden{name: "persona_hidden", required: true, type: "hidden"}
                .col-sm-10
                  .row
                    .col-sm-5
                      %input#responsable.form-control{name: "responsable", type: "text"}                      
                    %a.btn{'href' => '#showModal', 'data-toggle' => 'modal', "data-icon" => ""}
                    #showModal.modal.fade{'aria-hidden' => 'true',:tabindex => "-1"}
                      .modal-dialog
                        .modal-content
                          .modal-header
                            %button.close{'aria-hidden' => 'true','data-dismiss' => 'modal', type: "button"}
                            %h4.modal-title Buscar Responsable  
                          .modal-body
                            .form-horizontal 
                              %table#table_responsables.table.table-condensed.table-striped.table-hover.table-bordered.pull-left 
                                %thead
                                  %tr
                                    %th{style: "width:40%"} #
                                    %th{style: "width:60%"} Nombres y Apellidos
                                %tbody
                                  
                              .clearfix
                          .modal-footer     
                            %button.btn.btn-default{'data-dismiss' => 'modal',type: "button"}              
                              Cancelar
                            %button.btn.btn-primary{type: "button"}              
                              Guardar

             
              .form-group
                %label.col-sm-2.control-label{for: "fec_creacion"} Fecha de Creación
                .col-sm-10
                  .row
                    .col-sm-5
                      %input#fec_creacion.form-control.datepicker{type: "text", name:"fec_creacion"}

              .form-group
                .col-lg-offset-2.col-lg-10
                  %button.cancelarGuardar.btn.btn-default{type: "button"} Cancelar
                  %input#btnGuardar_Grupo.btn.btn-success{type: "button", value: "Guardar"}
  / Row end

  / Row start
  .row
    .col-md-12
      .widget
        .widget-header
          .title
            %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
            Lista de Grupos Principales
        .widget-body
          .dt_example.example_alt_pagination
            %table#-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
 
              %thead
                %tr
                  %th{style: "width:5%"} ID
                  %th{style: "width:15%"} Código
                  %th{style: "width:15%"} Responsable
                  %th{style: "width:15%"} Nro Miembros
                  %th.hidden-phone{style: "width:25%"} Fecha de Creación
                  %th.hidden-phone{style: "width:15%"} Acción
              %tbody
                
            .clearfix
    / Row end



  #loader{style: "display:none"}
    = render "layouts/loader"
/ Dashboard wrapper end
/ Main Container end
- content_for :bloquejavascript do
  = javascript_include_tag "wizard/bwizard.js"
  = javascript_include_tag "util/datatable_plugins.js" 
  = javascript_include_tag "custom-tables.js"
  = javascript_include_tag :grupos_principales
  :javascript
    $('##{@mactive} > span').addClass('current-arrow');