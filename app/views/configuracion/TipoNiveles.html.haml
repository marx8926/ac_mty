/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Tipo Niveles
      %small
        %li Home
        %li /
        %li Configuración
        %li /
        %li Tipos Niveles
  / Page title end
  / Row start
  .row
    .col-md-12
      .widget
        .widget-body
          .row
            .col-md-6.col-sm-6
              .widget
                .widget-header
                  .title 
                    %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Lista de Niveles
                .widget-body
                  .dt_example.example_alt_pagination
                    %table#categoriatable.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                      %thead
                        %tr
                          %th{style: "width:50%"} Descripción
                          %th{style: "width:10%"} Orden
                          %th{style: "width:20%"} Acciones
                      %tbody
                    .clearfix
            .col-md-6.col-sm-6
              .widget
                .widget-header
                  .title 
                    %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Registrar Niveles
                .widget-body
                  %form#form_categoria.form-horizontal{role: "form"}
                    %input#idcategoria{name:"idcategoria", type: "hidden"}
                    .form-group
                      %label.col-lg-2.control-label{for: "descripcion"} Descripción
                      .col-lg-10
                        %input#descripcion.form-control{name: "descripcion", type: "text"}
                    .form-group
                      %label.col-lg-2.control-label{for: "orden"} Orden-Nivel
                      .col-lg-10
                        %input#descripcion.form-control{name: "orden", type: "text"}
                    .form-group
                      .col-lg-offset-2.col-lg-10
                        %button.btnCancelar.btn.btn-default{type: "button"} Cancelar
                        %button#btnRegistrar_Categoria.btn.btn-success{type: "button"} Registrar
                        %button#btnGuardar_Categoria.btn.btn-success{type: "button", style: "display:none"} Guardar
  / Row end
  
