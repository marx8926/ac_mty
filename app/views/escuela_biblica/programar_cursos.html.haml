/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Programar Cursos
      %small
        %li Home
        %li /
        %li Escuela Bíblica
        %li /
        %li Programar Cursos
  / Page title end
  / Row start
  .row
    #accordion.col-md-12
      .widget
        .widget-header
          %a#agregar.btn.btn-primary.btn-block
            %span.fs1{"aria-hidden" => "true", "data-icon" => ""} 
            Administrar Horarios
        #regProgramar_cursos{style: "display:NONE"}
          .widget-body
            = form_tag("", {:method=>'post',:class=>'form-horizontal', :id => "form_programarcursos", :name=> "form_programarcursos"}) do
              .col-lg-5
                .form-group
                  %label.col-lg-2.col-sm-2.control-label Curso
                  .col-lg-7.col-sm-6
                    %select#curso.form-control{name: "curso"}
                      %option{value: "1"} A
                      %option{value: "0"} B 
                .form-group
                  %label.col-sm-2.control-label Fecha Inicio
                  .col-lg-7.col-sm-6
                    %input#fec_ini.form-control.datepicker{type: "text", name:"fec_ini"}
                .form-group
                  %label.col-sm-2.control-label Fecha Fin
                  .col-lg-7.col-sm-6
                    %input#fec_fin.form-control.datepicker{type: "text", name:"fec_fin"}
                .form-group
                  %label.col-lg-2.col-sm-2.control-label Turno
                  .col-lg-7.col-sm-6
                    %select#turno.form-control{name: "turno"}
                      %option{value: "1"} A
                      %option{value: "0"} B 
                
              .col-lg-7 
                .form-group
                  %label.col-lg-2.control-label Maestro  Titular                  
                  .col-lg-5.col-sm-5
                    %input#maestro_titular.form-control{name: "maestro_titular", type: "text"}
                  %button.btn{'href' => '#showModal', 'data-toggle' => 'modal', "data-icon" => ""}
                  #showModal.modal.fade{'aria-hidden' => 'true',:tabindex => "-1"}   
                    .modal-dialog
                      .modal-content
                        .modal-header
                          %button.close{'aria-hidden' => 'true','data-dismiss' => 'modal', type: "button"}
                          %h4.modal-title Buscar Responsable  
                        .modal-body
                          .form-horizontal               
                              
                            %table#-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left 
                              %thead
                                %tr
                                  %th{style: "width:40%"} #
                                  %th{style: "width:60%"} Nombres y Apellidos
                              %tbody
                                
                            .clearfix
                        .modal-footer     
                          %button.btn.btn-default{'data-dismiss' => 'modal',type: "button"}              
                            Cancelar
                          %button.btn.btn-primary{type: "button"}              
                            Guardar 
                .form-group
                  %label.col-lg-2.control-label Maestro Suplente                
                  .col-lg-5.col-sm-5
                    %input#nro_clase.form-control{name: "nro_clase", type: "text"}
                  %button.btn{'href' => '#showModal', 'data-toggle' => 'modal', "data-icon" => ""}
                .form-group
                  %label.col-lg-2.control-label Frecuencia Clase, cada
                  .col-lg-10
                    .row
                      .col-lg-6.col-sm-6
                        %div.input.input-group
                          %input#nro_person.form-control{name: "nro_person", type: "number"} 
                          %span.input-group-addon 
                            Día(s)    
                .form-group
                  %label.col-lg-2.col-sm-2.control-label Hora Inicio
                  .col-lg-10
                    .row                    
                      .col-lg-2.col-sm-2
                        %input#hora_ini.form-control{name: "hora_ini", type: "text"}                    
                      %label.col-lg-2.col-sm-2.control-label Hora fin
                      .col-lg-2.col-sm-2
                        %input#hora_fin.form-control{name: "hora_fin", type: "text"}                    
                                     
              .form-group
                .col-lg-offset-2.col-lg-10
                  %button.cancelarGuardar.btn.btn-default{type: "button"} Cancelar
                  %input.btn.btn-success{type: "button", value: "Guardar"}
  / Row end
  / Row start
  .row
    .col-md-12
      .widget
        .widget-header
          .title
            %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
            Lista de Cursos
        .widget-body
          .dt_example.example_alt_pagination
            %table.data-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
              %thead
                %tr
                  %th{style: "width:10%"} Nro
                  %th{style: "width:20%"} Curso
                  %th{style: "width:15%"} Fecha Inicio
                  %th{style: "width:15%"} Fecha Fin
                  %th{style: "width:15%"} Maestro
                  %th{style: "width:15%"} Estado
                  %th{style: "width:10%"} Acción
              %tbody
                
            .clearfix
  / Row end
  #loader{style: "display:none"}
    = render "layouts/loader"
/ Dashboard wrapper end
/ Main Container end
- content_for :bloquejavascript do
  = javascript_include_tag "wizard/bwizard.js"
  = javascript_include_tag :programar_cursos
  :javascript
    $('##{@mactive} > span').addClass('current-arrow');