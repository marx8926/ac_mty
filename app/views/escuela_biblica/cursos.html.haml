/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Cursos
      %small
        %li Home
        %li /
        %li Escuela Bíblica
        %li /
        %li Cursos
  / Page title end
  / Row start
  .row
    #accordion.col-md-12
      .widget
        .widget-header
          %a#agregar.btn.btn-primary.btn-block
            %span.fs1{"aria-hidden" => "true", "data-icon" => ""} 
            Crear Cursos
        #regcurso{style: "display:NONE"}
          .widget-body
            = form_tag("", {:method=>'post',:class=>'form-horizontal', :id => "form_cursos", :name=> "form_cursos"}) do
              .col-lg-6
                .form-group
                  %label.col-lg-2.control-label{for: "descrip"} Nombre 
                  .col-lg-6.col-sm-6
                    %input#descrip.form-control{name: "descrip", type: "text"}
                .form-group
                  %label.col-lg-2.control-label{for: "nro_clase"} Nro Clases
                  .col-lg-10
                    .row
                      .col-lg-6.col-sm-6
                        %input#nro_clase.form-control{name: "nro_clase", type: "text", disabled:""}
                      %button.btn{'href' => '#showModal', 'data-toggle' => 'modal', "data-icon" => ""}
                      #showModal.modal.fade{'aria-hidden' => 'true',:tabindex => "-1"}   
                        .modal-dialog
                          .modal-content
                            .modal-header
                              %button.close{'aria-hidden' => 'true','data-dismiss' => 'modal', type: "button"}
                              %h4.modal-title Registrar Temas o Clases  
                            .modal-body
                              .form-horizontal
                                .form-group
                                  %label.col-lg-3.control-label{for: "nombre_cur"} Nombre
                                  .col-lg-12
                                    .row
                                      .col-lg-6.col-sm-6
                                        %input#nombre_cur.form-control{name: "nombre_cur", type: "text"}
                                      %a.btn{'href' => '#', "data-icon" => ""}
                                %table#-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left 
                                  %thead
                                    %tr
                                      %th{style: "width:40%"} #
                                      %th{style: "width:60%"} Nombres 
                                  %tbody
                                    
                                .clearfix
                            .modal-footer     
                              %button.btn.btn-default{'data-dismiss' => 'modal',type: "button"}              
                                Cancelar
                              %button.btn.btn-primary{type: "button"}              
                                Guardar 
              .col-lg-6 
                .form-group
                  %label.col-lg-3.col-sm-2.control-label Tipo de Curso
                  .col-lg-6.col-sm-6
                    %select#tipo_curso.form-control{name: "tipo_curso"}
                      %option{value: "1"} A
                      %option{value: "0"} B  
                .form-group
                  .checkbox
                    %label.col-lg-1.col-sm-2.control-label
                    %input#descripcion{type: "checkbox", name: "descripcion"}
                      Pre Requisito
                    /modal para el checkbox de Pre Requisito
                    %button.btn{'href' => '#Modal_preRequisito', 'data-toggle' => 'modal'}
                    #Modal_preRequisito.modal.fade{'aria-hidden' => 'true',:tabindex => "-1"}   
                      .modal-dialog
                        .modal-content
                          .modal-header
                            %button.close{'aria-hidden' => 'true','data-dismiss' => 'modal', type: "button"}
                            %h4.modal-title Seleccionar Curso  
                          .modal-body
                            .form-horizontal                                
                              %table#-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left 
                                %thead
                                  %tr
                                    %th{style: "width:40%"} #
                                    %th{style: "width:60%"} Nombres 
                                %tbody
                                  
                              .clearfix
                          .modal-footer     
                            %button.btn.btn-default{'data-dismiss' => 'modal',type: "button"}              
                              Cancelar
                            %button.btn.btn-primary{type: "button"}              
                              Seleccionar 
              .form-group
                .col-lg-offset-2.col-lg-10
                  %button.cancelarGuardar.btn.btn-default{type: "button"} Cancelar
                  %input.btn.btn-success{type: "button", value: "Guardar"}
  / Row end
  / Row start
  .row
    .col-md-12
      .widget
        .widget-header
          .title
            %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
            Lista de Cursos
        .widget-body
          .dt_example.example_alt_pagination
            %table.data-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
              %thead
                %tr
                  %th{style: "width:10%"} Nro
                  %th{style: "width:25%"} Nombre
                  %th{style: "width:20%"} Tipo de Curso
                  %th{style: "width:10%"} Nro de Clase
                  %th{style: "width:20%"} Pre Requisito
                  %th{style: "width:15%"} Acciones
              %tbody
                
            .clearfix
  / Row end
  #loader{style: "display:none"}
    = render "layouts/loader"
/ Dashboard wrapper end
/ Main Container end
- content_for :bloquejavascript do
  = javascript_include_tag "wizard/bwizard.js"
  = javascript_include_tag :cursos
  :javascript
    $('##{@mactive} > span').addClass('current-arrow');