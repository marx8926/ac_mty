/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Gestión Asistencia
      %small
        %li Home
        %li /
        %li Escuela Bíblica
        %li /
        %li Gestión Asistencia
  / Page title end
  / Row start
  .row
    .col-md-12
      .widget
        .row
          .col-md-12.col-sm-12
            .widget
              .widget-header
                .title 
                  %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Filtro
                              
              .widget-body
                %br
                %form#form_plan_trabajo.form-horizontal{name: "form_plan_trabajo", method: "post"}
                
                  .form-group
                    %label.col-lg-1.col-sm-2.control-label Año
                    .col-lg-2.col-sm-2
                      %input#curso.form-control{name: "curso", type: "text"}
                    %label.col-lg-1.col-sm-1.checkbox-inline{style:"text-align:right;"}
                      %input#mes{type: "checkbox", name: "mes", style:"float:none;"}
                      Mes
                    .col-lg-8
                      .row                    
                        .col-lg-4.col-sm-2
                          %select#mes_lista.form-control{name: "mes_lista"}
                            %option{value: "0"} Todos
                            %option{value: "1"} Enero
                            %option{value: "2"} Febrero
                            %option{value: "3"} Marzo
                            %option{value: "4"} Abril
                            %option{value: "5"} Mayo
                            %option{value: "6"} Junio
                            %option{value: "7"} Julio
                            %option{value: "8"} Agosto
                            %option{value: "9"} Setiembre
                            %option{value: "10"} Octubre
                            %option{value: "11"} Noviembre
                            %option{value: "12"} Diciembre                    
                        %label.col-lg-2.col-sm-2.control-label Docente
                        .col-lg-4.col-sm-2
                          %input#curso.form-control{name: "curso", type: "text"}
                        %button.btn{'href' => '#showModal', 'data-toggle' => 'modal', "data-icon" => ""}
                        #showModal.modal.fade{'aria-hidden' => 'true',:tabindex => "-1"}   
                          .modal-dialog
                            .modal-content
                              .modal-header
                                %button.close{'aria-hidden' => 'true','data-dismiss' => 'modal', type: "button"}
                                %h4.modal-title Buscar Docente  
                              .modal-body
                                .form-horizontal               
                                    
                                  %table#-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left 
                                    %thead
                                      %tr
                                        %th{style: "width:40%"} #
                                        %th{style: "width:60%"} Nombres y Apellidos
                                    %tbody
                                      
                                  .clearfix
                              .modal-footer     
                                %button.btn.btn-default{'data-dismiss' => 'modal',type: "button"}              
                                  Cancelar
                                %button.btn.btn-primary{type: "button"}              
                                  Seleccionar 
        
       
        %div

          .col-md-12.col-sm-12
            .widget
              .widget-header
                .title
                  %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                  Lista de Cursos
            .widget-body
              %table#ganadostable.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                %thead
                  %tr
                  %th Nro
                  %th Curso
                  %th Fecha Inicio
                  %th Fecha Fin
                  %th Estado
                %tbody
                  %tr
                  %td 1
                  %td Post-Encuentro
                  %td 2014-03-01
                  %td 2014-03-31
                  %td En curso
              .clearfix
              
        %div
          .col-md-12.col-sm-12
            .widget
              .widget-header
                .title
                  %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                  Lista de Alumnos
            .widget-body
              %table#ganadostable.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                %thead
                  %tr
                  %th Nro
                  %th Nombres y Apellidos
                  %th Nota
                %tbody
                  %tr 
                  %td Cell 1
                  %td Cinthya
                  %td 
                    %a.btn{'href' => '#notas', 'data-toggle' => 'modal', "data-icon" => ""}
                    #notas.modal.fade{'aria-hidden' => 'true',:tabindex => "-1"}
                      .modal-dialog
                        .modal-content
                          .modal-header
                            %button.close{'aria-hidden' => 'true','data-dismiss' => 'modal', type: "button"}
                            %h4.modal-title Ingreso de Notas
                          .modal-body
                            .form-horizontal
                              .form-group
                                %label.col-lg-3.col-sm-2.control-label Criterio 1
                                .col-lg-8
                                  .row
                                    .col-lg-6.col-sm-4
                                      %input#curso.form-control{name: "curso", type: "text"}
                              .form-group
                                %label.col-lg-3.col-sm-2.control-label Criterio 2
                                .col-lg-8
                                  .row
                                    .col-lg-6.col-sm-4
                                      %input#curso.form-control{name: "curso", type: "text"}
                              .form-group
                                %label.col-lg-3.col-sm-2.control-label Criterio 3
                                .col-lg-8
                                  .row
                                    .col-lg-6.col-sm-4
                                      %input#curso.form-control{name: "curso", type: "text"}
                              .form-group
                                %label.col-lg-3.col-sm-2.control-label Promedio
                                .col-lg-8
                                  .row
                                    .col-lg-6.col-sm-4
                                      %input#curso.form-control{name: "curso", type: "text"}

                          .modal-footer     
                            %button.btn.btn-default{'data-dismiss' => 'modal',type: "button"}              
                              Cancelar
                            %button.btn.btn-primary{type: "button"}              
                              Guardar
                    
              .clearfix

                    
