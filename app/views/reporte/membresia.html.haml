/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Miembro y Visitante
      %small
        %li Home
        %li /
        %li Reportes
        %li /
        %li Miembro/Visitante
  / Page title end
  / Row start
  .row
    .col-md-12
      .widget
        .row
          .col-md-12.col-sm-12
            .widget
              .widget-header
                .title 
                  %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Filtro
              .widget-body
                %form#form_asistencia.form-horizontal{name: "form_asistencia", method: "post"}
                  #options.form-group
                    %label.col-lg-2.col-lg-offset-2.radio-inline
                      %input#optionsMiembro{checked: "checked", name: "option", type: "radio", value: "option1"}/
                      Miembro
                    %label.col-lg-2.radio-inline
                      %input#optionsVisitante{name: "option", type: "radio", value: "option2"}>/
                      Visitante
                  .form-group
                    %label.col-lg-2.control-label{for: "servicio"} Del
                    .col-lg-10
                      .row
                        .col-lg-5.col-sm-5
                          %div#datepicker.input-daterange.input-group
                            %input#fecha1.form-control{name: "fecha1", type: "text"}
                            %span.input-group-addon 
                              al
                            %input#fecha2.form-control{name: "fecha2", type: "text"}
                        .col-lg-2.col-sm-2
                          %button#btnGenerar_asistencia.btn.btn-success{type: "button", name: "btnGenerar_asistencia"} 
                            Generar
        .row
          .col-md-12.col-sm-12
            #widgetMiembro.widget
              .dt_example
                %table#table_asitencia_miembro.data-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                  %thead
                    %tr
                      %th Nombres
                      %th Edad
                      %th conversion
                      %th Naciento
                      %th Ocupacion
                      %th Direccion
                      %th Referencias
                      %th Telefono
                  %tbody
            #widgetVisitante.widget{style: "display:none"}
              .dt_example
                %table#table_asitencia_visitante.data-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                  %thead
                    %tr
                      %th Nombres
                      %th Edad
                      %th Naciento
                      %th Telefono
                  %tbody
        .row
          .col-md-12.col-sm-12
            .widget
              /%a#btnImprimir.btn.btn-default{type: "button", name: "btnImprimir"}
              /  %span.fs1{"aria-hidden" => "true", "data-icon" => ""} 
              /    Imprimir
              %a#btnReporte.btn.btn-success{type: "button", name: "btnReporte"}
                %span.fs1{"aria-hidden" => "true", "data-icon" => ""} 
                  Reporte Excel

- content_for :bloquejavascript do
  = javascript_include_tag :membresia
  :javascript
    $('##{@mactive} > span').addClass('current-arrow');