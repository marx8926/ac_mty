/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Diezmos
      %small
        %li Home
        %li /
        %li Diezmos
  / Page title end
  / Row start
  .row
    .col-md-12
      .widget
        .widget-header
          %a.btn#registrar_diezmo.btn-primary.btn-block{ href: "#collapseOne"}
            Agregar Diezmo
        %div#diezmo_div{style: "display:none"}
          .widget-body
            = form_tag("", {:method=>'post',:class=>'form-horizontal', :id => "form_diezmo" , :name => "form_diezmo"}) do
            
              .form-group
                %label.col-lg-2.control-label{for: "persona"} Persona
                %input#persona_hidden{name: "persona_hidden", required: true, type: "hidden"}
                .col-lg-5
                  %input#persona.form-control{name: "persona", type: "text" , class:"validate[required]"}/

              .form-group
                %label.col-lg-2.control-label{for: "fecha"} Fecha
                .col-lg-5
                  %input#fecha.form-control.datepicker{name: "fecha", type: "text",class:"validate[required,custom[date]]"}/

              .form-group
                %label.col-lg-2.control-label{for: "monto"} Monto
                .col-lg-5
                  %input#monto.form-control{name: "monto", type: "text", class:"validate[required,custom[integer],min[0]]"}/
              .form-group
                %label.col-lg-2.control-label{for: "peticion"} Petición
                .col-lg-5
                  %textarea#peticion.form-control{name: "peticion"}
              .form-group
                .col-lg-offset-2.col-lg-10
                  %button.btnCancelar.btn.btn-default{type: "button"} Cancelar
                  %button#btnGuardar_Diezmo.btn.btn-success{type: "button"} Guardar
  / Row end
  / Row start
  .row
    .col-md-12
      .widget
        .widget-header
          .title
            %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
            Lista de Diezmos
        .widget-body
          .dt_example.example_alt_pagination
            %table#table_diezmos.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
              %thead
                %tr
                  %th{style: "width:40%"} Persona
                  %th{style: "width:15%"} Fecha
                  %th{style: "width:15%"} Monto
                  %th{style: "width:30%"} Petición
              %tbody
            .clearfix
  / Row end

  #loader{style: "display:none"}
    = render "layouts/loader"
/ Dashboard wrapper end
/ Main Container end
- content_for :bloquecss do  
  = stylesheet_link_tag "smooth/jquery-ui-1.10.4.custom.min.css"
- content_for :bloquejavascript do
  = javascript_include_tag "jquery/jquery-ui-1.10.4.custom.min.js"
  = javascript_include_tag :diezmos
  :javascript
    $('##{@mactive} > span').addClass('current-arrow');
